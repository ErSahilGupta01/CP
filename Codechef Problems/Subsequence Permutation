#include <bits/stdc++.h>
using namespace std;
int main()
{  
    int T;
    cin>>T;
    for(int i=1;i<=T;i=i+1)
    {
      int n;
      cin>>n;
      string s;
      cin>>s;
      int a[n],b[n];
      for(int i=0;i<n;i++)
      {
          a[i]=s[i]-'0';
      }
      sort(s.begin(),s.end());
      for(int i=0;i<n;i++)
      {
          b[i]=s[i]-'0';
      }
      int k=0;
      for(int i=0;i<n;i++)
      {  if(a[i]!=b[i])
      {
          k++;
      }
 
      }
    cout<<k<<endl;
    }
}
