#include<bits/stdc++.h>
using namespace std;
int main()
{
  int n;
  cin>>n;
  int ar[n][3],num=0,num1=0,num2=0;
  for(int i=0;i<n;i++)
  {
      for(int j=0;j<3;j++)
      
     {
         cin>>ar[i][j];
         
     }
  }
  num=ar[0][0],num1=ar[0][1],num2=ar[0][2];
  
  int k,r,m;
      for(int j=0;j<n;j++)
      { 
        if(num<ar[j][0] )
        {
            num=ar[j][0];
          k=j;
        
        }}
        for(int j=0;j!=k,j<n;j++)
        {
          if(num1<ar[j][1] && j!=k)
        {
            num1=ar[j][1];
            r=j;
        
        }}
        for(int j=0;j!=r , j!=k , j<n;j++)
        {
          if(num2<ar[j][2] && j!=r && j!=k)
        {
            num2=ar[j][2];
           
        }
      }
  
  cout<<num+num1+num2;

    return 0;
}
